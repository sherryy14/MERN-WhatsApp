<%- include('header.ejs') %>

<body>
    <div class="container my-4">
        <a href="/"  class="btn btn-primary">All Chats</a>
        <h3 class="text-center">New Chat</h3>
        <div class="row">
            <form action="/chats/create" method="POST">
                <div class="row my-2">
                    <div class="col-6">
                        <input type="text" name="from" placeholder="From" class="form-control" required>
                    </div>
                    <div class="col-6">
                        <input type="text" name="to" placeholder="To" class="form-control" required>
                    </div>
                </div>
                <textarea name="message" id="" placeholder="Write your message here..."  class="form-control my-2" required></textarea>
                <button type="submit" class="btn btn-success">Send</button>
            </form>
        </div>
    </div>
</body>

</html>